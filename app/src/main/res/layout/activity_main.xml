<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.upload.MainActivity">

    <EditText
        android:id="@+id/editName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Title"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="30dp" />

    <EditText
        android:id="@+id/editPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Price"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="108dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/editName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="62dp"
        android:layout_height="54dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="245dp"
        android:layout_alignBottom="@+id/btnChoose"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp" />

    <Button
        android:id="@+id/btnChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Image"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="245dp"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/editDetails"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="331dp"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/btnChoose"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/btnList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ClothesList"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="394dp"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/btnAdd"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Details"

        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="168dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/editPrice"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
